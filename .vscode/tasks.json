{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sail Up",
            "type": "shell",
            "command": "./vendor/bin/sail up",
        },
        {
            "label": "Sail Run Dev",
            "type": "shell",
            "command": "./vendor/bin/sail npm run dev",
            "dependsOn": ["Sail Up"]
        },
        {
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Sail Up", "Run Dev"]
        }
    ]
}
